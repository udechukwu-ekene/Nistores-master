<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/WebAppTheme"
    android:background="@color/littleGrey"
    tools:context=".folders.pages.EditProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/info_layout"
            android:orientation="vertical"
            android:padding="@dimen/three_level_margin">

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/profile_info"
                android:padding="@dimen/three_level_margin"
                android:background="@drawable/theme_background"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="22.0sp"
                    android:textColor="@color/webColor"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_margin="@dimen/one_level_margin"
                    android:text="@string/profile_info" />
                <LinearLayout
                    android:background="@color/webColor"
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dip"
                    android:layout_marginTop="8.0dip"
                    android:layout_marginBottom="4.0dip" />

                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/profile_picture"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:layout_margin="@dimen/two_level_margin"
                    android:contentDescription="@string/default_picture"
                    app:srcCompat="@drawable/ic_person_default" />
                <android.support.v7.widget.AppCompatButton
                    android:theme="@style/ButtonOrange"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/font_one"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/edit_profile_pic"
                    android:padding="10.0dip"
                    android:layout_width="200.0dip"
                    android:layout_height="60.0dip"
                    android:layout_margin="@dimen/one_level_margin"
                    android:text="@string/change_profile_pic" />

                <TextView
                    android:textColor="@color/textColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/two_level_margin"
                    android:text="@string/last_name" />
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_sname"
                    android:layout_width="fill_parent"
                    app:hintEnabled="false"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/last_name"
                        android:background="@drawable/input_style1"
                        android:padding="@dimen/one_level_margin"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:hint="@string/last_name"
                        android:singleLine="true" />
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:textColor="@color/textColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/two_level_margin"
                    android:text="@string/first_name" />
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_fname"
                    android:layout_width="fill_parent"
                    app:hintEnabled="false"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/first_name"
                        android:background="@drawable/input_style1"
                        android:padding="@dimen/one_level_margin"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:hint="@string/first_name"
                        android:singleLine="true" />
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:textColor="@color/textColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/two_level_margin"
                    android:text="@string/email" />
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_email"
                    android:layout_width="fill_parent"
                    app:hintEnabled="false"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/input_email"
                        android:background="@drawable/input_style1"
                        android:padding="@dimen/one_level_margin"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:hint="@string/first_name"
                        android:singleLine="true" />
                </android.support.design.widget.TextInputLayout>

                <android.support.v7.widget.AppCompatButton
                    android:theme="@style/ButtonBlue"
                    android:textSize="14.0sp"
                    android:textColor="@android:color/white"
                    android:layout_gravity="start"
                    android:id="@+id/btn_save_profile"
                    android:padding="10.0dip"
                    android:layout_width="150.0dip"
                    android:layout_height="45.0dip"
                    android:layout_marginTop="10.0dip"
                    android:layout_marginBottom="10.0dip"
                    android:text="@string/save_changes" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/interests"
                android:padding="@dimen/three_level_margin"
                android:layout_marginTop="@dimen/three_level_margin"
                android:background="@drawable/theme_background"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="22.0sp"
                    android:textColor="@color/webColor"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_margin="@dimen/one_level_margin"
                    android:text="@string/interests" />
                <LinearLayout
                    android:background="@color/webColor"
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dip"
                    android:layout_marginTop="8.0dip"
                    android:layout_marginBottom="4.0dip" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_category"
                    android:scrollbars="vertical"
                    android:clipToPadding="false"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <!-- Network error layout for categories -->
                <LinearLayout
                    android:id="@+id/network_error_layout"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:padding="56.0dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="@dimen/font_three"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="@string/network_error" />
                    <android.support.v7.widget.AppCompatButton
                        android:theme="@style/ButtonBlue"
                        android:textSize="14.0sp"
                        android:textColor="@android:color/white"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/btn_retry"
                        android:padding="10.0dip"
                        android:layout_width="150.0dip"
                        android:layout_height="45.0dip"
                        android:layout_marginTop="10.0dip"
                        android:layout_marginBottom="10.0dip"
                        android:text="@string/retry" />
                </LinearLayout>
                <!-- End Network error layout for categories -->

                <ProgressBar
                    android:visibility="visible"
                    android:id="@+id/loader"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    />

                <android.support.v7.widget.AppCompatButton
                    android:theme="@style/ButtonBlue"
                    android:textSize="14.0sp"
                    android:textColor="@android:color/white"
                    android:visibility="gone"
                    android:layout_gravity="start"
                    android:id="@+id/update_interest"
                    android:padding="10.0dip"
                    android:layout_width="150.0dip"
                    android:layout_height="45.0dip"
                    android:layout_marginTop="10.0dip"
                    android:layout_marginBottom="10.0dip"
                    android:text="@string/update_interest" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>