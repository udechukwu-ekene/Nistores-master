<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="@dimen/one_level_margin">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/zero_level_margin">
        <ImageView
            android:id="@+id/merchantLogo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/default_picture" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/merchant_id"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor"
            android:textStyle="bold"
            android:textSize="@dimen/font_18"
            android:text="@string/profile"
            android:padding="@dimen/zero_level_margin"
            android:maxLines="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/textColor"
                android:textSize="@dimen/font_one"
                android:text="@string/yes_account"
                android:padding="@dimen/zero_level_margin"
                android:maxLines="1"/>

            <LinearLayout
                android:id="@+id/rate_container"
                android:layout_width="0dp"
                android:paddingStart="@dimen/four_level_margin"
                android:paddingLeft="@dimen/four_level_margin"
                android:layout_weight="2"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/star1"
                    android:layout_width="0dp"
                    android:padding="@dimen/zero_level_margin"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_star_black_24dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/ratings"/>
                <ImageView
                    android:id="@+id/star2"
                    android:layout_width="0dp"
                    android:padding="@dimen/zero_level_margin"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_star_black_24dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/ratings"/>
                <ImageView
                    android:id="@+id/star3"
                    android:layout_width="0dp"
                    android:padding="@dimen/zero_level_margin"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_star_black_24dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/ratings"/>
                <ImageView
                    android:id="@+id/star4"
                    android:layout_width="0dp"
                    android:padding="@dimen/zero_level_margin"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_star_black_24dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/ratings"/>
                <ImageView
                    android:id="@+id/star5"
                    android:layout_width="0dp"
                    android:padding="@dimen/zero_level_margin"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_star_black_24dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/ratings"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor"
            android:textSize="@dimen/font_two"
            android:text="@string/yes_account"
            android:padding="@dimen/zero_level_margin" />


    </LinearLayout>

</LinearLayout>