<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    n1:background="@color/littleGrey"
    n1:paddingLeft="@dimen/one_level_margin"
    n1:paddingTop="@dimen/one_level_margin"
    n1:paddingRight="@dimen/one_level_margin"
    n1:paddingBottom="@dimen/bottom_nav_height"
    n1:layout_width="fill_parent"
    n1:layout_height="fill_parent"
  xmlns:n1="http://schemas.android.com/apk/res/android">
    <LinearLayout
        n1:orientation="vertical"
        n1:background="@android:color/white"
        n1:layout_width="fill_parent"
        n1:layout_height="wrap_content">
        <TextView
            n1:textSize="22.0sp"
            n1:textColor="@color/webColor"
            n1:layout_width="fill_parent"
            n1:layout_height="wrap_content"
            n1:textAlignment="center"
            n1:layout_margin="@dimen/one_level_margin"
            n1:text="@string/title_business_lounge" />
        <ProgressBar
            n1:id="@+id/progress"
            n1:visibility="gone"
            n1:layout_width="match_parent"
            n1:layout_height="wrap_content"
            n1:padding="@dimen/one_level_margin"/>
        <android.support.v7.widget.RecyclerView
            n1:id="@id/recycler_view"
            n1:scrollbars="vertical"
            n1:clipToPadding="false"
            n1:layout_width="fill_parent"
            n1:layout_height="wrap_content" />
        <LinearLayout
            n1:orientation="vertical"
            n1:id="@+id/network_error_layout"
            n1:padding="@dimen/four_level_margin"
            n1:visibility="gone"
            n1:layout_width="fill_parent"
            n1:layout_height="wrap_content"
            n1:layout_marginTop="@dimen/four_level_margin">
            <TextView n1:textSize="@dimen/font_three"
                n1:layout_width="fill_parent"
                n1:layout_height="wrap_content"
                n1:text="@string/network_error" />
            <android.support.v7.widget.AppCompatButton
                n1:theme="@style/ButtonBlue"
                n1:textSize="20.0sp"
                n1:textColor="@android:color/white"
                n1:layout_gravity="center_horizontal"
                n1:id="@+id/btn_retry"
                n1:padding="10.0dip"
                n1:layout_width="fill_parent"
                n1:layout_height="60.0dip"
                n1:layout_marginTop="24.0dip"
                n1:layout_marginBottom="24.0dip"
                n1:text="@string/retry" />
        </LinearLayout>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>