<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nistores.awesomeurch.nistores.folders.pages.HelpDeskActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/three_level_margin"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor"
            android:textSize="28sp"
            android:textAlignment="center"
            android:padding="@dimen/four_level_margin"
            android:text="@string/how_help"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_create"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_margin="@dimen/two_level_margin"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            android:text="@string/create_ticket"
            android:textSize="@dimen/font_18"
            android:textColor="@android:color/white"
            android:theme="@style/ButtonOrange" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_search"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_margin="@dimen/two_level_margin"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            android:text="@string/search_ticket"
            android:textSize="@dimen/font_18"
            android:textColor="@android:color/white"
            android:theme="@style/ButtonBlueWeb" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor"
            android:textSize="@dimen/font_18"
            android:textAlignment="center"
            android:padding="@dimen/four_level_margin"
            android:text="@string/call_us"/>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
