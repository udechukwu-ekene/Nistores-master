<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="@dimen/one_level_margin"
    android:padding="@dimen/one_level_margin"
    android:foreground="?selectableItemBackground"
    android:focusable="true"
    android:clickable="true"
    android:orientation="vertical"
    android:background="@drawable/theme_background"
    android:layout_width="200dp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/duration"
        android:layout_marginTop="@dimen/four_level_margin"
        android:textSize="@dimen/font_two"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:layout_height="wrap_content"
        android:text="@string/could_not_fetch_stores"/>

    <TextView
        android:id="@+id/id"
        android:layout_width="0dp"
        android:layout_height="0dp" />
    <TextView
        android:id="@+id/time"
        android:layout_width="0dp"
        android:layout_height="0dp" />
    <TextView
        android:id="@+id/discount"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <LinearLayout
        android:layout_width="150dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/two_level_margin"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="@dimen/four_level_margin"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawablePadding="@dimen/one_level_margin"
            android:drawableLeft="@drawable/icons8_naira_50"
            android:drawableStart="@drawable/icons8_naira_50"/>

        <TextView
            android:id="@+id/price"
            android:textSize="@dimen/font_three"
            android:layout_width="match_parent"
            android:textColor="@color/colorPrimaryDark2"
            android:layout_height="wrap_content"
            android:text="@string/owner"/>

    </LinearLayout>


</LinearLayout>